<h1>All Addresses</h1>
<br />

<% if @addresses.any? %>
  <ul>
    <% @addresses.each do |address| %>
      <li>
        <%= link_to address.name, address_path(address.id) %> 
      </li>
    <% end %>
  </ul>
<% else %>
  <h3>No address found. Create one now!</h3>
<% end %>

<%= link_to 'New Address', new_address_path %>